{
    "name": "@locker/near-membrane-embedded",
    "version": "0.6.1",
    "description": "JavaScript Membrane Library to create a sandboxed environment in Lightning SDK Native Environments",
    "author": "Rick Waldron <rwaldron@salesforce.com>",
    "homepage": "https://github.com/salesforce/near-membrane#readme",
    "license": "MIT",
    "module": "lib/index.js",
    "types": "types/index.d.ts",
    "scripts": {
        "build": "tsc --project tsconfig.types.json && rollup -c",
        "clean": "rimraf lib types",
        "esvu": "./node_modules/.bin/esvu --engines=jsc,v8; cp -r  ~/.esvu/bin engines; cp ~/.esvu/status.json status.json",
        "test": "yarn esvu; yarn build; node runner.mjs exec"
    },
    "files": [
        "lib/",
        "types/"
    ],
    "publishConfig": {
        "access": "restricted"
    },
    "dependencies": {
        "@locker/near-membrane-base": "0.6.1"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "chalk": "^4.1.2",
        "esvu": "^1.2.4",
        "execution-time": "^1.4.1",
        "expect": "^27.0.6",
        "globby": "^12.0.0",
        "recast": "^0.20.5",
        "rollup": "^2.55.1",
        "rollup-plugin-polyfill-node": "^0.7.0",
        "tempfile": "^4.0.0",
        "yargs": "^17.1.1"
    }
}
